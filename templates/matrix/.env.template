SYNAPSE_REPORT_STATS=no

# PostgreSQL (LXC_database - 192.168.8.103)
POSTGRES_HOST=192.168.8.103
POSTGRES_PORT=5432
POSTGRES_DB=matrix
POSTGRES_USER=matrix
POSTGRES_PASSWORD=  # From secrets/domains.nix: dbMatrixPassword

